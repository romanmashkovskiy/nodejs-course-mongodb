<h1>My orders</h1>

{{#if orders.length}}
    {{#each orders}}
        <div class="row">
            <div class=".col s6 offset-s3">
                <div class="card">
                    <div class="card-content">
                        <span class="card-title">
                            Order <small>{{_id}}</small>
                        </span>
                        <p class="date">{{date}}</p>
                        <p><em>{{user.name}} </em>{{user.userId.email}}</p>
                        <ol>
                            {{#each courses}}
                                <li>
                                    {{course.title}} X {{count}}
                                </li>
                            {{/each}}
                        </ol>
                        <hr>
                        <p>Price: <span class="price">{{price}}</span></p>
                    </div>
                </div>
            </div>
        </div>
    {{/each}}
{{else}}
    <p>No orders</p>
{{/if}}